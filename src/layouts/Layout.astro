---
import Logo from '../components/Logo.astro';
import Nav from '../components/Nav.astro';
// import NavList from '../components/NavList.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-white text-dark-grey font-roboto">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav position="static">
			<Logo />
			<!-- <NavList /> -->
		</Nav>
		<slot />
	</body>
</html>

<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,600;1,400;1,600&family=Roboto+Slab:wght@100..900&display=swap');

.animated-background {
    background-size: 400%;

    -webkit-animation: animation 3s linear infinite;
    -moz-animation: animation 3s linear infinite;
    animation: animation 3s linear infinite;
}

@keyframes animation {
    0%,
    100% {
        background-position: 0% 50%;
    }
    
    50% {
        background-position: 100% 50%;
    }
}
</style>