---
import type { url, linkTheme } from '../types/types';

interface Props {
    url: url
    theme?: linkTheme
}

const { url, theme = 'default' } = Astro.props;

const classes = [
    theme === 'default' ? 'bg-coral text-white' : '',
    theme === 'green' ? 'bg-green text-white' : '',
    theme === 'black' ? 'bg-black text-white' : '',
    theme === 'dark-blue' ? 'bg-dark-blue text-white' : '',
    theme === 'purple' ? 'bg-purple text-white' : '',
    theme === 'blue' ? 'bg-blue text-white' : '',
    theme === 'light-green' ? 'bg-light-green text-white' : '',
    theme === 'coral' ? 'bg-coral text-white' : '',
]
---

<a href={url} target="_blank" class="font-roboto-slab inline-block px-3 py-1 my-1 rounded hover:drop-shadow hover:scale-105 transition-all" class:list={classes}>
    <slot />
</a>